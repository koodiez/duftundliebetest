    <!-- Swiper -->
    <div class="insta-swiper_container">
    <div class="swiper mySwiper">
        <div class="swiper-wrapper">
        {% for block in section.blocks %}
        <div class="swiper-slide"><img src="{{block.settings.image | img_url: '475x'}}" alt=""></div>
        {% endfor %} 
    </div>
        <div class="swiper-pagination"></div>
    </div>
    </div>

    <!-- Initialize Swiper -->
    <script>
      var swiper = new Swiper(".mySwiper", {
        slidesPerView: 1,
        spaceBetween: 10,
        loop: true,
        pagination: {
          el: ".swiper-pagination",
          clickable: true,
        },
        breakpoints: {
          640: {
            slidesPerView: 2,
            spaceBetween: 20,
          },
          768: {
            slidesPerView: 4,
            spaceBetween: 40,
          },
          1024: {
            slidesPerView: 5,
            spaceBetween: 50,
          },
        },
      });
    </script>

    
      {% schema %}
        {

        "blocks" : [ 
        {
            "type": "image",
            "name" : "image block",
            "settings" : [
                {
                    "type": "image_picker",
                    "label": "your image",
                    "id" : "image"
                }
            ]
        }
        ],

           "presets": [
         {
           "name": "Insta Swiper",
           "category": "Heading"
           
         }
         ]
      }
      {% endschema %}